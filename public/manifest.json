{
  "name": "Prompt Efficiency Tool",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://*.workers.dev/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://chat.deepseek.com/*",
    "https://perplexity.ai/*",
    "https://www.perplexity.ai/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "assets/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://grok.com/*",
        "https://chat.deepseek.com/*",
        "https://perplexity.ai/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ]
}
